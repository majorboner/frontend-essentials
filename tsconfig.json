{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ES5",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "moduleResolution": "node",
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  // "include": [
  //   "/config/jest/jest-setup.ts"
  // ],
}